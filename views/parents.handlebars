<a href="/">
  <i class="fa-fa-home"></i>
</a>

<h1>{{ message }}</h1>

<ul>
  {{#each movies}}
    <li>
      <h2>{{ name }}</h2>
      <p>Rating: {{ rating }}</p>
      <h4>Reviews:</h4>
      <p>{{ reviews }}</p>
      <video src="/public/videos/{{ video_url }}" controls poster="/public/images/{{ thumbnail_url }}"></video>
    </li>
  {{/each}}
</ul>
